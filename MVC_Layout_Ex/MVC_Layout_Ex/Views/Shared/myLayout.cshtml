<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
</head>
<body style="background-color:cadetblue">

	<!-- Header -->
	<header>
		<h1 style="text-align:center; color:lightgoldenrodyellow">My Smart Page</h1>
		<img src="~/images/pic2.jpg" style="width:40px;height:50px" />
	</header>


	<!-- End of Header -->
	<!-- Left Sidebar -->

	<nav>
		<h3>Navigation</h3>
		@Html.ActionLink("About", "AboutUs","Home");<br />
		@Html.ActionLink("Contact", "ContactUs","Home");<br />
		@Html.ActionLink("Enquiry", "Enquiry","Home");<br />

	</nav>
	<!-- End of Left Sidebar -->
	<!-- Content Body -->
	<div class="content">
		@RenderBody()    
	</div>


	<div style="background-color:palegreen; color:orange; font-weight:bold">
		@RenderSection("Note", false)  
	</div>
	<!-- End of Content Body -->
	<!-- Footer -->
	<footer>
		<h4>I am Footer@copyRights http://www.Synergetics.com</h4>
		<div style="background-color:forestgreen; color:white">
			@RenderSection("Footer", false)
		</div>
	</footer>
	@RenderSection("Scripts", required: false)  
	<!-- Style -->

	<style>
		header {
			height: 200px;
			width: 100%;
			background-color: gold;
		}



		nav {
			float: left;
			width: 200px;
			height: 250px;
			background-color: greenyellow;
		}



		.content {
			background-color: wheat;
			padding: 20px;
		}



		footer {
			background-color: orange;
			width: 100%;
			height: 50px;
			float: right;
			text-align: center;
		}
	</style>
</body>
</html>

