@model MVC_DBFirst_practice.Models.Category;


<h1 class="align-content-center bg-primary border-bottom ">Update the Category with Id: @Model.catid</h1>
<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-striped table-bordered">
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="catid" class="control-label"></label>
                            <input asp-for="catid" class="form-control" readonly/>
                            <span asp-validation-for="catid" class="text-danger"></span>

                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="category" class="control-label"></label>
                            <input asp-for="category" class="form-control" />
                            <span asp-validation-for="category" class="text-danger"></span>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>
                    </td>

                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary pl-5 pr-5" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </td>
                </tr>

            </table>




        </form>
    </div>
</div>
